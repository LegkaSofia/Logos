<div class="container">
    <form method="post" asp-action="Register" asp-controller="Authorize" class="form-group">
        <fieldset>
            <legend>Add User</legend>
            <div>
                <label for="Login">Login:</label>
                <input type="text" name="Login" value="" class="form-control" />
            </div>
            <div>
                <label for="Password">Password:</label>
                <input type="password" name="Password" value="" class=" form-control" />
            </div>
            <div>
                <label for="Name">Name:</label>
                <input type="text" name="Name" value="" class="form-control" />
            </div>
            <div>
                <label for="Surname">Surname:</label>
                <input type="text" name="Surname" value="" class=" form-control" />
            </div>
            <div>
                <label for="E-mail">E-mail:</label>
                <input type="text" name="E-mail" value="" class=" form-control" />
            </div>
            <div>
                <div>
                    <label for="Phone">Phone:</label>
                    <input type="text" name="Phone" value="" class=" form-control" />
                </div>
                <label>&nbsp;</label>
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </fieldset>
    </form>
</div>